{
  "$comment": "Output template for commit-and-push skill",
  "commit_and_push_output": {
    "$comment": "Результат выполнения коммита и пуша",
    "status": "{{status: enum: success|partial|failed}}",
    "commit_info": {
      "commit_hash": "{{commit_hash: string, pattern: /^[a-f0-9]{7,40}$/}}",
      "commit_message": "{{commit_message: string}}",
      "files_committed": "{{files_committed: integer, min 0}}",
      "branch": "{{branch: string}}",
      "timestamp": "{{timestamp: string, ISO 8601 format}}"
    },
    "push_info": {
      "pushed": "{{pushed: boolean}}",
      "remote": "{{remote: string}}",
      "remote_branch": "{{remote_branch: string}}",
      "commits_pushed": "{{commits_pushed: integer, min 0}}"
    },
    "validation_results": {
      "pre_commit_checks": "{{pre_commit_checks: enum: passed|failed|skipped}}",
      "remote_verification": "{{remote_verification: enum: passed|failed|skipped}}"
    },
    "errors": "{{errors: array of strings, optional}}",
    "warnings": "{{warnings: array of strings, optional}}",
    "notes": "{{notes: array of strings, optional, integration notes}}"
  }
}
