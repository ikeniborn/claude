{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$comment": "Flexible schema - prd_sections and risks are optional",
  "type": "object",
  "properties": {
    "task_plan": {
      "type": "object",
      "properties": {
        "task_name": {"type": "string", "minLength": 5},
        "prd_sections": {
          "type": "array",
          "items": {"type": "string"}
        },
        "problem": {"type": "string", "minLength": 10},
        "solution": {"type": "string", "minLength": 10},

        "acceptance_criteria": {
          "type": "array",
          "minItems": 1,
          "items": {"type": "string"}
        },

        "files_to_change": {
          "type": "array",
          "minItems": 1,
          "items": {
            "$ref": "../../_shared/base-schema.json#/definitions/file_change"
          }
        },

        "execution_steps": {
          "type": "array",
          "minItems": 1,
          "items": {
            "$ref": "../../_shared/base-schema.json#/definitions/execution_step"
          }
        },

        "risks": {
          "type": "array",
          "items": {
            "type": "object",
            "properties": {
              "risk": {"type": "string"},
              "mitigation": {"type": "string"}
            },
            "required": ["risk", "mitigation"]
          }
        },

        "git": {
          "allOf": [
            {"$ref": "../../_shared/base-schema.json#/definitions/git"},
            {
              "type": "object",
              "properties": {
                "base_branch": {"type": "string", "description": "Base branch for PR (e.g., main, master, develop)"}
              }
            }
          ]
        }
      },
      "required": [
        "task_name", "problem", "solution",
        "acceptance_criteria", "files_to_change", "execution_steps", "git"
      ]
    }
  },
  "required": ["task_plan"]
}
